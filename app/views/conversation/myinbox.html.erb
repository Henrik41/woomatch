

<div id="wrapper">
<%= render "header/header" %>
<%= render 'activities/navbar' %>	
         <div class="clear"></div>

  <div class="home-popular-project">
		<div class="layout-2cols">
		        <div class="content grid_8">
					 <div class= "topmessage">      
						<div class='topmessageleft'>  <h2 class="rs project-title">Hey <%= current_user.username %> you have <%=@messages_count%> NEW mails</h2></div> <div class='topmessageright'><a class="btn btn-red" href="/conversation/myoutbox">Check my Outbox</a> </div></div> 
					
					
			</br>
	
		
<% @conversations.each do |c| %>		
				<div class="box-gray">
		          		    <h3 class="title-box">From</h3>
							 <div class="media">
				                 <a href="#" class="thumb-left">
				         			    <% whois = c.participants - Array(current_user) %>
									 <% if whois.empty? %>

									  <%= image_tag current_user.avatar.url(:mini) %>
									<% else %>
										<%= image_tag whois[0].avatar.url(:mini) %>
									<% end %>    </a>
							<div class="thumb-right"> NEW MAIL! </div>
								<h3 class="rs"><a href="#" class="be-fc-orange fw-b">	<% if whois.empty? %>
									  <%= current_user.username %>
									<% else %>
								<%= whois[0].username %>
								<% end%></a></h3>
								   <h4 class="rs">


					                 <div class="media-body">
					                   <a href="#" class="be-fc-orange fw-b">sent: <%= c.created_at %></a></h4>
				
					</br>
					<div class="thumb-middle">
									    <% whois = c.participants - Array(current_user) %>
  <% if whois[0].online? %>
is online
 <% else %>
 is offline 
<% end %>
					  <h2 class="rs"><a href="#" class="be-fc-orange fw-b">	<%= link_to c.subject, :controller => 'conversation', :action => 'show', :id => c.id %> </a></h2>
					</div>

					<div class="thumb-right">

					                     <div class="btn btn-blue" ><%= link_to 'Read', {:controller => 'conversation', :action => 'show', :id => c.id}, {:style =>'color:#ffffff'}    %></div>
<div class = 'btn btn-red'>				                   
<%= link_to 'Delete', trash_path(:conversation_id => c.id), { :method => :post , :style =>'color:#ffffff' } %></div>
					</div>
							</div>
				  </div>
<% end %>

<%= paginate @conversations %>
		        </div><!--end: .content -->
<%= render "sidebar" %>

		        <div class="clear"></div>
		</div>
</div>

<%= render 'footer/footer'%>



</div>

